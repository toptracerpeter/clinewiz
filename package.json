{
  "name": "memory-bank-view",
  "displayName": "Memory Bank View",
  "description": "Integrated UI for Cline memory-bank",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onCommand:memoryBank.openView"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "memoryBank.openView",
        "title": "Open Memory Bank View"
      },
      {
        "command": "memoryBank.openDevtools",
        "title": "Memory Bank: Open Webview Devtools"
      },
      {
        "command": "memoryBank.reloadWebview",
        "title": "Memory Bank: Reload Webview"
      },
      {
        "command": "memoryBank.showOutput",
        "title": "Memory Bank: Show Output Channel"
      }
    ],
    "configuration": {
      "title": "Memory Bank",
      "properties": {
        "memoryBank.path": {
          "type": "string",
          "default": "memory-bank",
          "description": "Relative path to the memory bank folder within the workspace."
        },
        "memoryBank.features.graphEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the simple neighbor graph in the webview."
        },
        "memoryBank.features.markdownPreviewEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable markdown preview rendering in the details pane."
        },
        "memoryBank.refresh.debounceMs": {
          "type": "number",
          "default": 200,
          "minimum": 0,
          "description": "Debounce interval (ms) for file watcher refresh updates."
        }
      }
    }
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "gray-matter": "^4.0.3",
    "marked": "^17.0.1"
  }
}
